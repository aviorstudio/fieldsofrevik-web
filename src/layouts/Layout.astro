<style is:global>
	@layer base {
		html,
		body {
			margin: 0;
			padding: 0;
			width: 100%;
			height: 100%;
			font-family: theme(fontFamily.sans);
			overflow-x: hidden;
			-webkit-text-size-adjust: 100%;
			-ms-text-size-adjust: 100%;
		}

		* {
			box-sizing: border-box;
		}
	}
</style>
